{
  "version": "0.0.1",
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext",
      "dom.iterable",
      "deno.ns"
    ],
    "types": [
      "./src/frontend/scripts/globals.d.ts"
    ]
  },
  "exclude": [
    "public/"
  ],
  "include": [
    "src/frontend/scripts"
  ],
  "tasks": {
    "dev": "deno task bundle-watch & deno task start",
    "build": "deno task bundle",
    "start": "deno run --allow-net --allow-read -ESR jsr:@std/http/file-server dist",
    "clean": "rm -r dist/* 2> /dev/null",
    "bundle": "deno bundle src/frontend/index.html src/frontend/html/pop.html --code-splitting --platform browser --sourcemap --outdir dist",
    "bundle-script": "deno task --unstable-bundle bundle.ts",
    "bundle-watch": "deno bundle --watch src/frontend/index.html src/frontend/html/pop.html --code-splitting --platform browser --sourcemap --outdir dist",
  },
  "permissions": {
    "net-read": {
      "net": true,
      "read": true,
    }
  },
  "imports": {
    "@awesome.me/webawesome": "npm:@awesome.me/webawesome@^3.0.0",
    "quill": "npm:quill@^2.0.3",
    "quill/modules/toolbar": "npm:quill@^2.0.3/modules/toolbar.js",
    "quill/dist/quill.snow.css": "npm:quill@^2.0.3/dist/quill.snow.css"
  }
}
